    }
  ],
  "engines": {
    "node": "^18.17.0 || ^20.9.0",
    "homebridge": "^1.6.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint . --cache --ext .ts",
    "watch": "npm run build && npm link && nodemon",
    "build": "rimraf ./dist && tsc",
