  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kovapatrik/homebridge-blueair-purifier.git"
  },
  "homepage": "https://github.com/kovapatrik/homebridge-blueair-purifier#readme",
